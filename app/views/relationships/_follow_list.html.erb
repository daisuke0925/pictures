<table class='table'>
  <% if users.exists? %>
  <% users.each do |user| %>
<thead>
  <tr>
    <th>プロフィール画像</th>
    <th>名前</th>
    <th colspan="3"></th>
  </tr>
</thead>

<tbody>
  <tr>
    <td><%= attachment_image_tag user, :profile_image, size: '60x60' %></td>
    <td><%= user.last_name + user.first_name %></td>
    <td>フォロー数: <%= user.followings.count %></td>
    <td>フォロワー数: <%= user.followers.count %></td>
    <td><%= link_to '詳細', user_path(user.id), class: "user_#{user.id}" %></td>
  </tr>
</tbody>
  <% end %>
  <% else %>
  <p>ユーザーはいません</p>
  <% end %>
</table>