<!DOCTYPE html>
<html>
  <head>
    <title>Pictures</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="sticky-top">
      <nav class="navbar navbar-expand-md navbar-dark bg-dark text-white">
        <a>
          <%= link_to 'pictures', root_path, data: {"turbolinks" => false} %>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to '投稿フォーム', new_photo_path, class: "btn-sm btn-secondary" %>
              </li>
              <li class="nav-item">
                <%= link_to '投稿一覧', photos_path, class: "btn-sm btn-secondary" %>
              </li>
              <li class="nav-item">
                <%= link_to 'ユーザー一覧', users_path, class: "btn-sm btn-secondary" %>
              </li>
              <li class="nav-item">
                <%= link_to "マイページ", user_path(current_user.id), class: "btn-sm btn-secondary" %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_user_session_path, class: "btn-sm btn-danger", method: :delete %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "新規登録", new_user_registration_path, class: "btn-sm btn-success" %>
              </li>
              <li class="nav-item">
                <%= link_to "ログイン", new_user_session_path, class: "btn-sm btn-success" %>
              </li>
            <% end %>
            <%= render 'searches/form' %>
          </ul>
        </div>
      </nav>
    </header>
  <main>
    <%= yield %>
  </main>
  </body>
</html>
