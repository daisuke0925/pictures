<h2>プロフィール編集</h2>

<table>
  <thead>
    <tr>
      <th>姓</th>
    </tr>
    <tr>
      <th>名</th>
    </tr>
    <tr>
      <th>姓（カナ）</th>
    </tr>
    <tr>
      <th>名（カナ）</th>
    </tr>
    <tr>
      <th>プロフィール画像</th>
    </tr>
  </thead>

  <tbody>
    <%= form_with model:@user, local:true do |f| %>
      <tr>
        <td><%= f.text_field :last_name %></td>
      </tr>
      <tr>
        <td><%= f.text_field :first_name %></td>
      </tr>
      <tr>
        <td><%= f.text_field :last_name_kana %></td>
      </tr>
      <tr>
        <td><%= f.text_field :first_name_kana %></td>
      </tr>
      <tr>
        <td><%= f.attachment_field :profile_image, size: '60x60' %></td>
      </tr>
  </tbody>
</table>
    <%= f.submit "変更を保存" %>
    <% end %>
