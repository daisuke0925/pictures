<table class='table'>
  <thead>
    <tr>
      <th>ユーザー画像</th>
      <th>名前</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag(user, :profile_image, size: :'60x60') %></td>
        <td><%= user.last_name + user.first_name %></td>
        <td><%= link_to '詳細', user_path(user.id), class: "user_#{user.id}" %></td>
        <td>
        <% if current_user != user %>
          <% if current_user.following?(user) %>
        <td><%= link_to "フォロー外す", user_relationships_path(user.id), class: "btn btn-sm btn-danger", method: :delete %></td>
          <% else %>
        <td><%= link_to "フォローする", user_relationships_path(user.id), class: "btn btn-sm btn-success", method: :post %></td>
          <% end %>
        <% end %>
        </td>
      </tr>
        <% end %>
    </tbody>
</table>
