<h1>ユーザー詳細</h1>
<div>
  <h3><%= @user.last_name + @user.first_name %></h3> <!--ユーザーの名前を表示-->
  <%= attachment_image_tag @user, :profile_image, size: '60x60' %> <!--ユーザープロフィール画像表示-->
</div>

<% if @user.id == current_user.id %> <!--ページを開いているユーザーがログイン中のユーザーだったら-->
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p> <!--プロフィールの編集へ-->
<% end %>

<%= link_to "フォロー", user_followings_path(@user.id) %> <!--フォロー一覧へ-->
<%= link_to "フォロワー", user_followings_path(@user.id) %> <!--フォロワー一覧へ-->

<table class='table table-hover table-inverse'> <!--ホバーテーブル-->
  <thead>
    <tr>
      <th>投稿画像</th>
      <th>タイトル</th>
      <th>本文</th>
      <th colspan="３"></th>
    </tr>
  </thead>
  <% @photos.each do |photo| %> <!--each文でオブジェクト内の情報を一つずつ取り出す-->
  <tbody>
    <tr>
      <td>
          <%= link_to photo_path(photo.id) do %> <!--投稿の詳細へ-->
          <%= attachment_image_tag photo, :image, size: :'60x60' %> <!--投稿画像の表示-->
          <% end %> <!--link_to do で囲んだものに投稿詳細へのリンクを付与-->
      </td>
      <td><%= photo.title %></td> <!--投稿のタイトル-->
      <td><%= photo.body %></td> <!--投稿の本文-->
    </tr>
  </tbody>
  <% end %>
</table>