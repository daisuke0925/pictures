<div>
  <h3><%= @user.last_name + @user.first_name %></h3>
  <%= attachment_image_tag @user, :profile_image %>
</div>

<% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
<% end %>

<% @photos.each do |photo| %>
<div>
  <%= link_to photo_path(photo.id) do %>
    <%= attachment_image_tag photo, :image %>
  <% end %>
  <p>投稿ユーザー画像：<%= attachment_image_tag @user, :profile_image %></p>
  <p>タイトル：<%= photo.title %></p>
  <p>説明：<%= photo.body %></p>
  <p>ユーザーネーム：<%= photo.user.last_name + photo.user.first_name %></p>
</div>
<% end %>
