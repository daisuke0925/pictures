<% if @model == 'user' %>
  <h3>Users search for "<%= @content %>"</h3>
  <%= render 'users/index', users: @records %>
<% else @model == 'photos' %>
  <h3>Photos search for "<%= @content %>"</h3>
   <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>投稿画像</th>
      <th>タイトル</th>
      <th>本文</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= attachment_image_tag photo, :image, size: '60x60' %></td>
        <td><%= link_to photo.title, photo_path(photo), class: "photo_#{photo.id}" %></td>
        <td><%= photo.body %></td>
    <% end %>
  </tbody>
<% end %>
   </table>

