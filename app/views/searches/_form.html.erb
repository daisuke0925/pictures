<% if user_signed_in? %> <!--ユーザーがサインインしているかどうか-->
    <%= form_tag(search_path, method: :get) do %>
      <%= text_field_tag 'content' %>
      <%= select_tag 'model', options_for_select({ "User" => "user", "Photo" => "photo" }) %> <!--モデルの選択-->
      <%= select_tag 'method', options_for_select({ "完全一致" => "perfect", "部分一致" => "partial" }) %> <!--入力が完全一致か部分一致か検索方法の指定-->
      <%= submit_tag '検索' %>
    <% end %>
<% end %>
